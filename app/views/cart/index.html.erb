
<a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="cart/destroy">Empty Cart</a>


	<table>
	  <thead>
	    <tr>
	      <th>Product</th>
	      <th>Amount</th>
	      <th>Price</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	  <tbody>
	   
	   <% total=0 %>
	   <ul>
      	<%@cart.each do |id, amount|%>
			<%@product=Product.find_by_id(id)%>
			<%@price=@product.price %>
		<tr>
		<li class="product_list">
			<td><%= link_to @product.title,@product%></td>
			<td><%= amount %></td>
			<td><%= number_to_currency(@price, :unit=>'$') %></td>
			<td><a href='/cart/<%=id%>/remove'>Remove this item</a></td>
			<% total+=(@product.price*amount) %>
		</li>
		</tr>
	<% end %>
	</ul>
	
	</tbody>
</table>
<p>Total amount: <%=number_to_currency(total, :unit=>'$')%></p>

